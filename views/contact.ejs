<%-include('partials/header');-%>
<title>Contact Us</title>

<section class="topsection contact">

     <div class=" container">
     
         <div class="row">
           <div class="col s12 m6">
             <h3>Contact us</h3>
             <p class="flow-text">Drop us a message or give us a call</p>
            </div>
           
           <div class="col s12 m4 offset-m2"><img class="responsive-img topimg-contact" src="images/email.svg" alt="web design"></div>
           </div>
           <% if (message) { %>
           <div class="container alert"> 
            <%=message%> 
          </div>
            <%}%>
     
    </div>
 </section>
 <section>
  <div class="container ">

  <div class="row">
    <div class="col s12 m6">
      
        <h5>We'd lik to hear from you</h5>
    
        <div class="row">
          <div class="col s2"><i class="fas fa-phone-volume fa-lg"></i></div>
          <div class="col s4"><span class="contactus">+25377258911</span></div>
        </div>
        <div class="row">
          <div class="col s2"><i class="fas fa-map-marker  fa-lg"></i></div>
          <div class="col s4"><span class="contactus">Address:<br>
            Haramouse west<br>
            Rue Haramous<br>
            Djibouti<br>
            PB3700

          </span></div>
        </div>
        <div class="row">
          <div class="col s2"><i class="fas fa-globe fa-lg"></i></div>
          <div class="col s4"><span class="contactus">
            www.djibdigital.com
          </span></div>
        </div>
     
      </div>

    <div class="col s12 m6 ">
        <form action="/email" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <input id="first_name" name="first_name"  type="text" class="validate" required>
                <label for="first_name">First Name</label>
              </div>
              <div class="input-field col s12">
                <input id="last_name"  name="last_name" type="text" class="validate" required>
                <label for="last_name">Last Name</label>
              </div>
            
              <div class="input-field col s12">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
              </div>
              <div class="input-field col s12">
                <input id="phone"  name="phone" type="text" class="validate"  required>
                <label for="phone">Phone</label>

              </div>
          
  
              <div class="input-field col s12 ">
                <textarea id="textarea1" name="textarea1" class="materialize-textarea contact-page-form" required></textarea>
                <label for="textarea1">Message</label>
              
                </div>
                <button class="btn waves-effect waves-light light-blue darken-4" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
              </div>
             
                    
            </form>
           
          </div>
        
      </div>
        
    </div>
  
 </section>

 <!--JavaScript at end of body for optimized loading-->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
 <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
 <script>
   
   var elems = document.querySelectorAll('.sidenav');
     M.Sidenav.init(elems, {edge:"right"});
  

  $(document).ready(function(){
   $('.slider').slider();
   $('.dropdown-trigger').dropdown();

   
  
});
</script>
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
AOS.init();
</script>
</body>
</html>


